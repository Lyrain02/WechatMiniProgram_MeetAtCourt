/* pages/idle/idle.wxss */
page{
  width:100%;
  background-color: skyblue;

  color: #2a5389;
  font-size: 36rpx;
  letter-spacing:10rpx;
}

.content{
  display: flex;
  flex-direction: column;
  justify-items: center;
  padding: 20rpx 70rpx;
  /*border-style: solid;*/
}

.item{
  width:100%;
  height: 300rpx;
  border-radius: 20rpx;
  background-color: white;
  overflow: hidden;
}

.blank{
  height: 50rpx;
}


.mask{
  height:100%;
  width:100%;
  position: fixed;
  top:0;
  left:0;
  background-color:black;
  z-index:10;
  opacity: 0.75;
}

.modal{
  top:30%;
  left: 40rpx;
  width: 640rpx;
  position: fixed;
  z-index:11;
  background-color: white;
  color: #2a5389;
  padding: 40rpx 10rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.modal .row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
  width: 500rpx;
  margin: 30rpx 0 0 0rpx;
}

.modal .title{
  font-size: 36rpx;
  font-weight: 500;
  margin:0 0 20rpx 0rpx;
}

.modal .txt{
  font-size: 30rpx;
}

.modal .row .button1{
  font-size:34rpx;
  border-style: solid;
  border-width: 5rpx;
  border-color: #a6cdca;
  background-color: white;
  color:#a6cdca;
  padding:10rpx 40rpx 10rpx 50rpx;
  border-radius: 10rpx;
}

.modal .row .button2{
  font-size:34rpx;
  border-style: solid;
  border-color: #fdbf76;
  background-color: #fdbf76;
  color:white;
  padding:10rpx 40rpx 10rpx 50rpx;
  border-radius: 10rpx;
}