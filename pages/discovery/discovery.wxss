/* pages/discovery/discovery.wxss */
page{
  width:100%;
  background-color: #f5f5f5;
}

.activity{
  background-color: white;
  color: #2a5389;
  margin: 50rpx 40rpx;
  border-radius: 20rpx;
  overflow: hidden;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.activity .poster{
  width:100%;
  height:350rpx;
}

.activity .row{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 50rpx;
}

.activity .row .title{
  font-size: 36rpx;
  padding: 0 30rpx;
}

.activity .row .icon{
  margin-right: 40rpx;
  height: 30rpx;
  width: 40rpx;
}

.activity .detail{
  font-size: 32rpx;
  padding: 0 30rpx 20rpx 30rpx;
}